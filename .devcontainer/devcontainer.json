{
  "name": "AWS CLI DevContainer",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",  // Base image (required)
  "features": {
    "ghcr.io/devcontainers/features/aws-cli:1": {},      // AWS CLI
    "ghcr.io/devcontainers/features/docker-in-docker:1": {
      "version": "latest",                               // Docker (DinD)
      "moby": true
    }
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "containerEnv": {
    "AWS_CLI_AUTO_PROMPT": "on-partial"
  },
  "postCreateCommand": "docker --version && aws --version pip install flask flask-cors aws-xray-sdk watchtower",
  "customizations": {
    "vscode": {
      "extensions": [
        "AmazonWebServices.aws-toolkit-vscode",  // AWS Toolkit
        "ms-azuretools.vscode-docker",           // Docker extension
        "ms-python.python"                       // Python (optional)
      ]
    }
  }
}